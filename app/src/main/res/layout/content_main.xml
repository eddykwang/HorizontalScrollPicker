<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  app:layout_behavior="@string/appbar_scrolling_view_behavior"
  tools:context=".MainActivity"
  tools:showIn="@layout/activity_main">

  <com.eddystudio.scrollpicker.ScrollPickerView
    android:id="@+id/scrollpickerview"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:layout_margin="16dp"
    app:centerPointerBgColor="@color/colorAccent"
    app:centerPointerHeight="68dp"
    app:centerPointerWidth="42dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:pickerViewBgColor="@color/design_default_color_primary"/>

  <com.eddystudio.scrollpicker.ScrollPickerView
    android:id="@+id/pk2"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/scrollpickerview"/>


  <com.eddystudio.scrollpicker.ScrollPickerView
    android:id="@+id/pk_vertical"
    android:layout_width="420dp"
    android:layout_height="250dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="142dp"
    android:layout_marginEnd="142dp"
    app:pickerViewBgColor="@android:color/darker_gray"
    app:centerPointerBgColor="@android:color/holo_blue_dark"
    app:pickerOrientation="vertical"
    app:centerPointerHeight="68dp"
    app:centerPointerWidth="420dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/pk2"/>

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/selected_item_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:textSize="32sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>